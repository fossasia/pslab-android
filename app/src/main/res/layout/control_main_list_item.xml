<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:visibility="visible"
    android:layout_marginTop="@dimen/control_card_margin"
    android:layout_marginEnd="@dimen/control_card_margin"
    android:layout_marginStart="@dimen/control_card_margin">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview_control_main"
        android:layout_width="match_parent"
        android:layout_height="@dimen/control_card_height"
        android:layout_gravity="center"
        card_view:cardCornerRadius="@dimen/control_card_radius">

        <LinearLayout
            android:id="@+id/linearlayout_control_main1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_control_main1"
                android:layout_width="65dp"
                android:layout_height="30dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="22dp"
                android:text=""
                android:textSize="16sp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/button_control_main1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="22dp"
                android:background="@drawable/button_minus" />

            <EditText
                android:id="@+id/edittext_control_main1"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginTop="25dp"
                android:gravity="center"
                android:padding="@dimen/control_text_padding"
                android:inputType="numberDecimal"
                android:background="@drawable/control_edittext"/>

            <Button
                android:id="@+id/button_control_main2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="22dp"
                android:background="@drawable/button_plus" />
            <Button
                android:id="@+id/button_control_main3"
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:layout_marginTop="22dp"
                android:text="@string/set"
                android:textColor="@color/white"
                android:background="@color/colorPrimaryDark"/>
            <TextView
                android:id="@+id/text_control_main2"
                android:layout_width="110dp"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="22dp" />
        </LinearLayout>

        <SeekBar
            android:id="@+id/seekbar_control_main1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="60dp" />
    </android.support.v7.widget.CardView>

</LinearLayout>
