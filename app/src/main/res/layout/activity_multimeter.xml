        app:layout_constraintBottom_toBottomOf="@+id/knob_line_center"
        app:layout_constraintEnd_toStartOf="@+id/knob_line_right"
        app:layout_constraintStart_toEndOf="@+id/knob_line_left"
        app:layout_constraintTop_toTopOf="@+id/knob_line_center" />

    <View
        android:id="@+id/knob_line_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/multimeter_knoblines_width"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/multimeter_square_horizontal_line_margin_bottom"
        android:layout_marginEnd="@dimen/multimeter_square_margin_right"
        android:layout_marginLeft="@dimen/multimeter_square_margin_left"
        android:layout_marginRight="@dimen/multimeter_square_margin_right"
        android:layout_marginStart="@dimen/multimeter_square_margin_left"
        android:background="@android:color/black"
        app:layout_constraintBottom_toTopOf="@+id/reset"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/knob_line_right"
        android:layout_width="@dimen/multimeter_knoblines_width"
        android:layout_height="@dimen/multimeter_square_vertical_line_height"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="@dimen/multimeter_square_margin_right"
        android:layout_marginRight="@dimen/multimeter_square_margin_right"
        android:background="@android:color/black"
        app:layout_constraintBottom_toTopOf="@+id/knob_line_bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/knob_line_up" />

    <it.beppi.knoblibrary.Knob
        android:id="@+id/knobs"
        android:layout_width="@dimen/multimeter_knob_width"
        android:layout_height="@dimen/multimeter_knob_height"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="@dimen/multimeter_knob_margin_right"
        android:layout_marginLeft="@dimen/multimeter_knob_margin_left"
        android:layout_marginRight="@dimen/multimeter_knob_margin_right"
        android:layout_marginStart="@dimen/multimeter_knob_margin_left"
        android:layout_marginTop="@dimen/multimeter_knob_margin_top"
        android:layout_weight="1"
        android:rotation="90"
        app:kKnobCenterColor="@color/colorPrimaryDark"
        app:kKnobColor="@color/white"
        app:kKnobRelativeRadius="0.99"
        app:kNumberOfStates="14"
        app:kSelectedStateMarkerColor="@color/white"
        app:kStateMarkersColor="@color/black"
        app:kStateMarkersWidth="1dp"
        app:layout_constraintBottom_toBottomOf="@+id/knob_line_center2"
        app:layout_constraintEnd_toEndOf="@+id/knob_line_right"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/knob_line_center2" />

    <TextView
        android:id="@+id/knob_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/multimeter_knob_text_margin_bottom"
        android:layout_marginEnd="@dimen/multimeter_knob_text_margin_right"
        android:layout_marginLeft="@dimen/multimeter_knob_text_margin_left"
        android:layout_marginRight="@dimen/multimeter_knob_text_margin_right"
        android:layout_marginStart="@dimen/multimeter_knob_text_margin_left"
        android:layout_marginTop="@dimen/multimeter_knob_text_margin_top"
        android:layout_weight="1"
        android:background="@color/colorPrimaryDark"
        android:text="@string/id1"
        android:textColor="@color/white"
        android:textSize="@dimen/multimeter_textsize"
        app:layout_constraintBottom_toBottomOf="@+id/knob_line_center2"
        app:layout_constraintEnd_toEndOf="@+id/knob_line_right"
        app:layout_constraintStart_toStartOf="@+id/knob_line_left"
        app:layout_constraintTop_toTopOf="@+id/knob_line_center2"
        app:layout_constraintVertical_bias="0.489" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/ch1"
        android:textSize="@dimen/control_textsize_tiny"
        android:textStyle="bold"
        app:layout_constraintCircle="@id/knobs"
        app:layout_constraintCircleAngle="347"
        app:layout_constraintCircleRadius="@dimen/multimeter_knobcircle_radius_2" />

