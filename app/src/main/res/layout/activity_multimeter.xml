        android:layout_marginRight="@dimen/multimeter_square_center_vertical_margin_right"
        android:layout_marginStart="@dimen/multimeter_square_center_vertical_margin_left"
        android:background="@android:color/black"
        app:layout_constraintBottom_toTopOf="@+id/knob_line_bottom"
        app:layout_constraintEnd_toStartOf="@+id/knob_line_right"
        app:layout_constraintStart_toEndOf="@+id/knob_line_left"
        app:layout_constraintTop_toBottomOf="@+id/knob_line_up"
