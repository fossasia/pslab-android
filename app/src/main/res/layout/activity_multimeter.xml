            android:text="@string/count_pulse"
            android:textColor="@color/white"
            android:textSize="@dimen/multimeter_heading_ll_text_size"
            android:textStyle="bold" />

    </LinearLayout>

    <View
        android:id="@+id/knob_line_center2"
        android:layout_width="@dimen/multimeter_knoblines_width"
        android:layout_height="@dimen/multimeter_square_vertical_line_height"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="@dimen/multimeter_square_center_vertical_margin_right"
        android:layout_marginLeft="@dimen/multimeter_square_center_vertical_margin_left"
