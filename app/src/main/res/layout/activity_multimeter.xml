        android:layout_height="@dimen/multimeter_button_height"
        android:layout_marginBottom="@dimen/multimeter_left_button_margin_bottom"
        android:layout_marginEnd="@dimen/multimeter_left_button_margin_right"
        android:layout_marginLeft="@dimen/multimeter_left_button_margin_left"
        android:layout_marginRight="@dimen/multimeter_left_button_margin_right"
        android:layout_marginStart="@dimen/multimeter_left_button_margin_left"
