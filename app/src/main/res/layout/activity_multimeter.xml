        android:layout_marginEnd="@dimen/multimeter_square_margin_right"
        android:layout_marginLeft="@dimen/multimeter_square_margin_left"
        android:layout_marginRight="@dimen/multimeter_square_margin_right"
        android:layout_marginStart="@dimen/multimeter_square_margin_left"
        android:layout_marginTop="@dimen/multimeter_square_horizontal_line_margin_top"
        android:background="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
