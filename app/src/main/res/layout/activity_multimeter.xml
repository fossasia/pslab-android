<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/multimeter_knoblines_width"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/multimeter_knoblines_margin_bottom"
        android:layout_marginEnd="@dimen/multimeter_knoblines_margin_right"
        android:layout_marginLeft="@dimen/multimeter_knoblines_margin_left"
        android:layout_marginRight="@dimen/multimeter_knoblines_margin_right"
        android:layout_marginStart="@dimen/multimeter_knoblines_margin_left"
        android:background="@android:color/black"
        app:layout_constraintBottom_toBottomOf="@+id/knob_line_center"
        app:layout_constraintEnd_toStartOf="@+id/knob_line_right"
        app:layout_constraintStart_toEndOf="@+id/knob_line_left"
        app:layout_constraintTop_toTopOf="@+id/knob_line_center"
        app:layout_constraintVertical_bias="0.447" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="@dimen/multimeter_heading_ll_width"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/knob_line_right"
        app:layout_constraintStart_toEndOf="@+id/knob_line_left"
        app:layout_constraintTop_toTopOf="@+id/knob_line_left">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:paddingBottom="@dimen/multimeter_button_text_padding"
            android:paddingTop="@dimen/multimeter_button_text_padding"
            android:text="@string/voltage_channels"
            android:textColor="@color/white"
            android:textSize="@dimen/multimeter_heading_ll_text_size"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:gravity="center_horizontal"
            android:paddingBottom="@dimen/multimeter_button_text_padding"
            android:paddingTop="@dimen/multimeter_button_text_padding"
            android:text="@string/voltage_elements"
            android:textColor="@color/white"
            android:textSize="@dimen/multimeter_heading_ll_text_size"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/display_box"
        android:layout_width="@dimen/multimeter_textbox_width"
        android:layout_height="@dimen/multimeter_textbox_height"
        android:layout_marginEnd="@dimen/multimeter_textbox_margin_right"
        android:layout_marginLeft="@dimen/multimeter_textbox_margin_left"
        android:layout_marginRight="@dimen/multimeter_textbox_margin_right"
        android:layout_marginStart="@dimen/multimeter_textbox_margin_left"
        android:layout_marginTop="@dimen/multimeter_textbox_margin_top"
        android:background="@drawable/tv_border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/quantity"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/multimeter_valuebox_height"
        android:layout_marginEnd="@dimen/multimeter_valuebox_margin_right"
        android:layout_marginRight="@dimen/multimeter_valuebox_margin_right"
        android:layout_marginTop="@dimen/multimeter_valuebox_margin_top"
        android:textSize="@dimen/multimeter_textsize"
        app:layout_constraintEnd_toEndOf="@+id/display_box"
        app:layout_constraintTop_toTopOf="@+id/display_box" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/multimeter_line_width"
        android:layout_marginEnd="@dimen/multimeter_line_margin_right"
        android:layout_marginLeft="@dimen/multimeter_line_margin_left"
        android:layout_marginRight="@dimen/multimeter_line_margin_right"
        android:layout_marginStart="@dimen/multimeter_line_margin_left"
        android:layout_marginTop="@dimen/multimeter_line_margin_top"
        android:background="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="@+id/display_box"
        app:layout_constraintStart_toStartOf="@+id/display_box"
        app:layout_constraintTop_toTopOf="@+id/display_box" />

    <TextView
        android:id="@+id/unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/multimeter_unitbox_margin_right"
        android:layout_marginLeft="@dimen/multimeter_unitbox_margin_left"
        android:layout_marginRight="@dimen/multimeter_unitbox_margin_right"
        android:layout_marginStart="@dimen/multimeter_unitbox_margin_left"
        android:layout_marginTop="@dimen/multimeter_unitbox_margin_top"
        android:textSize="@dimen/multimeter_textsize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/display_box" />

    <Button
        android:id="@+id/resistance"
        android:layout_width="@dimen/multimeter_button_width"
        android:layout_height="@dimen/multimeter_button_height"
        android:layout_marginEnd="@dimen/multimeter_left_button_margin_right"
        android:layout_marginLeft="@dimen/multimeter_left_button_margin_left"
        android:layout_marginRight="@dimen/multimeter_left_button_margin_right"
        android:layout_marginStart="@dimen/multimeter_left_button_margin_left"
        android:layout_marginTop="@dimen/multimeter_left_button_margin_top"
        android:background="@color/colorPrimary"
        android:text="@string/resistance"
        android:textColor="@color/white"
        android:textSize="@dimen/multimeter_bottombutton_textsize"
        app:layout_constraintEnd_toStartOf="@+id/capacitance"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/display_box" />

    <Button
        android:id="@+id/capacitance"
        android:layout_width="@dimen/multimeter_button_width"
        android:layout_height="@dimen/multimeter_button_height"
        android:layout_marginEnd="@dimen/multimeter_right_button_margin_right"
        android:layout_marginLeft="@dimen/multimeter_right_button_margin_left"
        android:layout_marginRight="@dimen/multimeter_right_button_margin_right"
        android:layout_marginStart="@dimen/multimeter_right_button_margin_left"
        android:layout_marginTop="@dimen/multimeter_right_button_margin_top"
        android:background="@color/colorPrimary"
        android:text="@string/capacitance"
        android:textColor="@color/white"
        android:textSize="@dimen/multimeter_bottombutton_textsize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/resistance"
        app:layout_constraintTop_toBottomOf="@+id/display_box" />

    <View
