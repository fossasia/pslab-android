<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/selectableItemBackground"
    android:minHeight="@dimen/height_48dp"
    android:paddingLeft="@dimen/padding_20dp"
    android:paddingRight="@dimen/padding_20dp">

    <ImageView
        android:id="@+id/experiment_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_50dp"
        android:layout_marginStart="@dimen/margin_50dp"
        android:contentDescription="@string/experiment_icon"
        android:src="@drawable/text_doc" />

    <TextView
        android:id="@+id/individual_experiment_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:layout_marginStart="@dimen/margin_10dp"
        android:layout_toEndOf="@+id/experiment_icon"
        android:layout_toRightOf="@id/experiment_icon"
        android:gravity="center_vertical"
        android:textColor="@color/grey"
        android:textSize="@dimen/text_14sp" />

</RelativeLayout>
