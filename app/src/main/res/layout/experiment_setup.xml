<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/experiment_setup"
        android:textSize="@dimen/exp_setup_textsize" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="187dp"
        android:src="@drawable/wip_sign" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/control_margin_small"
        android:padding="@dimen/control_edittext_padding"
        android:text="@string/work_in_progress"
        android:textAlignment="center"
        android:textSize="@dimen/control_textsize_medium" />

</LinearLayout>