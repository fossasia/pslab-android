<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/light_sensor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.fossasia.pslab.activity.SensorActivity">

    <FrameLayout
        android:id="@+id/frame_layout_bh1750"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bh1750_navigation"
        android:animateLayoutChanges="true" />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bh1750_navigation"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        app:menu="@menu/fragment_bh1750_bottom_navigation"
        app:theme="@style/AppTheme.BottomNavigationBar" />

</RelativeLayout>