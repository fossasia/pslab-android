<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="@dimen/height_48dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/margin_10dp"
        android:layout_marginTop="@dimen/margin_10dp">

        <Space
            android:id="@+id/experiment_holder_separator"
            android:layout_width="@dimen/width_20dp"
            android:layout_height="match_parent"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/experiment_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contentDescription="@string/drop_down_arrow"
            android:padding="@dimen/padding_5dp"
            android:src="@drawable/ic_arrow_drop_down_black_24dp" />

        <ImageView
            android:id="@+id/header_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_folder_grey_24dp" />

        <TextView
            android:id="@+id/experiment_header_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_marginStart="@dimen/margin_10dp"
            android:textSize="@dimen/text_18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:id="@+id/separation_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_1dp"
        android:background="@color/dark_grey" />

</LinearLayout>
